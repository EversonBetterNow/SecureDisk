<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmergencyActivity">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnPet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pet"
            android:visibility="visible"
            app:layout_column="1"
            app:layout_row="7" />

        <Button
            android:id="@+id/btnEmergency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saúde Pessoal"
            android:visibility="visible"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/btnMecanica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mecânico"
            android:visibility="visible"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/btnPolicia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Policia"
            android:visibility="visible"
            app:layout_column="1"
            app:layout_row="5" />

        <Button
            android:id="@+id/espace1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button"
            android:visibility="invisible"
            app:layout_column="1"
            app:layout_row="2"
            tools:visibility="invisible" />

        <Button
            android:id="@+id/espace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button"
            android:visibility="invisible"
            app:layout_column="1"
            app:layout_row="4"
            tools:visibility="invisible" />

        <Button
            android:id="@+id/espace2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button"
            android:visibility="invisible"
            app:layout_column="1"
            app:layout_row="6"
            tools:visibility="invisible" />

        <Button
            android:id="@+id/espace3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button"
            android:visibility="invisible"
            app:layout_column="1"
            app:layout_row="8"
            tools:visibility="invisible" />

        <Button
            android:id="@+id/espace4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button"
            android:visibility="invisible"
            app:layout_column="1"
            app:layout_row="9"
            tools:visibility="invisible" />

        <Button
            android:id="@+id/espace5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button"
            android:visibility="invisible"
            app:layout_column="1"
            app:layout_row="10"
            tools:visibility="invisible" />
    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>